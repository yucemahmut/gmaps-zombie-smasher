<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="fr.alma.ihm.gmapszombiesmasher" android:versionCode="1"
	android:versionName="1.0">

	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
	<uses-permission android:name="android.permission.DISABLE_KEYGUARD"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:theme="@android:style/Theme.NoTitleBar">
		<uses-library android:name="com.google.android.maps" />

		<activity android:label="@string/app_name"
			android:screenOrientation="portrait" android:name="gMapsZombieSmasher">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:label="@string/settings"
			android:name="SettingPreferenceActivity">
		</activity>
		<activity android:label="@string/play"
			android:screenOrientation="portrait" android:name="PlayActivity">
		</activity>
		<activity android:label="@string/achievements"
			android:screenOrientation="portrait" android:name="AchievementsActivity">
		</activity>
		<activity android:label="@string/game"
			android:screenOrientation="landscape" android:name="GameActivity"
			android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
		</activity>
		<activity android:label="@string/select_world_in_map"
      android:name="SelectWorldInMap"
      android:screenOrientation="landscape">
    </activity>
		<activity android:label="@string/gps_utilities"
      android:name=".utils.GPSUtilities"
      android:screenOrientation="landscape">
		</activity>
		<activity android:label="@string/edit_world_in_map"
      android:name="EditWorldInMap"
      android:screenOrientation="landscape">
    </activity>
	</application>

</manifest>
